

 <div class="container">
  <div class="row">
    <br>
    <div class="jumbotron">
      <h1 class="display-3 text-center" style="font-weight: 900; font-size: 3em;">Welcome to .... </h1>
      <hr class="my-4">
      <h1 class="lead">Good Burger</h1>
    </div>
    <div class="row">
      <div class="col-xs-6 text-center" class="task">
        <div class="panel panel-default">
          <div class="panel-heading" style="font-weight: 900; font-size: 1.5em;">Good Burgers, Ready to Eat!</div>
          <div class="panel-body">
            {{#each burger_data}}
              {{#unless this.devoured}}
                <div class="row">
                  <div class="col-xs-9 text-left" style="font-weight: bold;">
                    <pre style="font-size: 1.25em;"> {{this.id}}. {{this.burger_name}}</pre>
                  </div>
                  <div class="col-xs-3 text-center">
                    <form method="POST" action="burger/{{id}}" class="button-size" style="line-height: 0px;">
                      <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                      <br>
                      <button type="sumbit" class="btn btn-default btn-success">Devour It!</button>
                    </form>
                  </div>
                </div>
              {{/unless}}
            {{/each}}
          </div>
        </div>
      </div>
      <div class="col-xs-6 text-center" class="task">
        <div class="panel panel-default">
          <div class="panel-heading" style="font-weight: 900; font-size: 1.5em;">Devoured Burgers</div>
          <div class="panel-body">
            {{#each burger_data}}
              {{#if this.devoured}}
                <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
              {{/if}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-6 text-center enter_section">
      <div class="panel panel-default">
        <div class="panel-heading" style="font-weight: 900; font-size: 1.5em;">Add a burger</div>
        <div class="panel-body">
          <form action="/add" method="POST">
            <div class="input-group">
              <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
              <br>
              <span class="input-group-btn">
                <button type="sumbit" class="btn btn-primary" id="text-enter-button">Add</button>
              </span>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col-xs-6 text-center enter_section">
      <div class="panel panel-default">
        <div class="panel-heading" style="font-weight: 900; font-size: 1.5em;">Clear all burgers!</div>
        <div class="panel-body">
          <form action="/delete" method="POST">
            <button type="sumbit" class="btn btn-danger" id="text-enter-button">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>